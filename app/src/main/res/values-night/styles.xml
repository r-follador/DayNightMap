<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="cardViewStyle">@style/CardviewCustom</item>
    </style>


    <style name="CardviewCustom" parent="CardView.Light">
        <item name="android:backgroundTint">#000000</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:backgroundTint">#818181</item>
        <item name="titleTextAppearance">@style/AppTheme.ToolbarTextStyle</item>

    </style>

    <style name="AppTheme.ToolbarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/lato</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="CameraTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="MapTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SwitchCompatStyle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/switchCompatBackground</item>
        <item name="android:background">@color/switchCompatText</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#70C3EC</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/roundedcorner2</item>
    </style>

    <style name="MapButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mapButtonText</item>
        <item name="android:background">@drawable/roundedcorner</item>
    </style>

    <style name="TimesliderToggleButton" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/mapButtonText</item>
        <item name="android:background">@drawable/roundedcorner</item>
    </style>

    <style name="InfoBox">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="FloatingActionMap">
        <item name="android:tint">#FFFFFF</item>
        <item name="android:backgroundTint">#000000</item>
    </style>

    <style name="Seekbar">
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
